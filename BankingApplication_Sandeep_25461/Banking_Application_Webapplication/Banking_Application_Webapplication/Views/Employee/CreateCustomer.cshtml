@model Banking_Application_Webapplication.Customer

@{
    ViewBag.Title = "Create Customer";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title">Create Customer</h2>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("CreateCustomer", "Employee", FormMethod.Post, new { @class = "needs-validation", novalidate = "true" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            @Html.LabelFor(model => model.FirstName)
                            @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control", required = "true" })
                            <div class="invalid-feedback">Please enter the first name.</div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.LastName)
                            @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", required = "true" })
                            <div class="invalid-feedback">Please enter the last name.</div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Email)
                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", required = "true", type = "email" })
                            <div class="invalid-feedback">Please enter a valid email address.</div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.PIN)
                            @Html.TextBoxFor(model => model.PIN, new { @class = "form-control", required = "true" })
                            <div class="invalid-feedback">Please enter the PIN.</div>
                        </div>

                        <button type="submit" class="btn btn-primary">Create</button>
                    }
                </div>
            </div>

            @if (ViewBag.CustomerCreated != null && ViewBag.CustomerCreated)
            {
                <div class="alert alert-success mt-3" role="alert">
                    Customer created successfully!
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        // Client-side form validation
        (function () {
            'use strict';

            window.addEventListener('load', function () {
                var forms = document.getElementsByClassName('needs-validation');

                var validation = Array.prototype.filter.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
}
